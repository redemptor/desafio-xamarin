<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteXP.Views.MainPage"
             BackgroundColor="#1A202E" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid RowDefinitions="40,35,*" RowSpacing="1">
            <StackLayout Orientation="Horizontal" Grid.Row="0" BackgroundColor="#293241" Padding="15,0">
                <Label Text="Histórico" VerticalTextAlignment="Center" FontSize="Small"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Grid.Row="1" BackgroundColor="#293241" Padding="15,0">
                <Label Text="{StaticResource chevron-down}" VerticalTextAlignment="Center" FontSize="13" FontFamily="FontAwesomeSolid"/>
                <Label Text="ORDENS EM ABERTO" VerticalTextAlignment="Center" FontSize="13"/>
            </StackLayout>

            <ListView Grid.Row="2" ItemsSource="{Binding Ordens}">
                <ListView.Header>
                    <Grid ColumnDefinitions="2*,*,*,*,*,*,*,*,*,*,*,*,*,*,*" BackgroundColor="#1A2030" Margin="0" Padding="5">
                        <Label Text="DATA E HORA" FontSize="9" Grid.Column="0"/>
                        <Label Text="ASSESSOR" FontSize="9" Grid.Column="1"/>
                        <Label Text="CONTA" FontSize="9" Grid.Column="2"/>
                        <Label Text="ATIVO" FontSize="9" Grid.Column="3"/>
                        <Label Text="TIPO" FontSize="9" Grid.Column="4"/>
                        <Label Text="QTD" FontSize="9" Grid.Column="5"/>
                        <Label Text="QTD. APARENTE" FontSize="9" Grid.Column="6"/>
                        <Label Text="QTD.DISP" FontSize="9" Grid.Column="7"/>
                        <Label Text="QTD. CANCEL" FontSize="9" Grid.Column="8"/>
                        <Label Text="QTD. EXEC" FontSize="9" Grid.Column="9"/>
                        <Label Text="VALOR" FontSize="9" Grid.Column="10"/>
                        <Label Text="VALOR DISP" FontSize="9" Grid.Column="11"/>
                        <Label Text="OBJETIVO" FontSize="9" Grid.Column="12"/>
                        <Label Text="OBJ.DISP" FontSize="9" Grid.Column="13"/>
                        <Label Text="REDUÇÃO" FontSize="9" Grid.Column="14"/>
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="2*,*,*,*,*,*,*,*,*,*,*,*,*,*,*" BackgroundColor="#232939" Margin="0" Padding="5">
                                <Label Text="{Binding DataHora}" FontSize="9" Grid.Column="0"/>
                                <Label Text="{Binding Assessor}" FontSize="9" Grid.Column="1"/>
                                <Label Text="{Binding Conta}" FontSize="9" Grid.Column="2"/>
                                <Label Text="{Binding Ativo}" FontSize="9" Grid.Column="3"/>
                                <Label Text="{Binding Tipo}" FontSize="9" Grid.Column="4"/>
                                <Label Text="{Binding Quantidade}" FontSize="9" Grid.Column="5"/>
                                <Label Text="{Binding QuantidadeAparente}" FontSize="9" Grid.Column="6"/>
                                <Label Text="{Binding QuantidadeDisparo}" FontSize="9" Grid.Column="7"/>
                                <Label Text="{Binding QuantidadeCancelada}" FontSize="9" Grid.Column="8"/>
                                <Label Text="{Binding QuantidadeExecutada}" FontSize="9" Grid.Column="9"/>
                                <Label Text="{Binding Valor}" FontSize="9" Grid.Column="10"/>
                                <Label Text="{Binding ValorDisparo}" FontSize="9" Grid.Column="11"/>
                                <Label Text="{Binding Objetivo}" FontSize="9" Grid.Column="12"/>
                                <Label Text="{Binding ObjetivoDisponivel}" FontSize="9" Grid.Column="13"/>
                                <Label Text="{Binding Reducao}" FontSize="9" Grid.Column="14"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>